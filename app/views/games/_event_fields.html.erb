<div class='nested-fields'>
  <div class='form-group'>
    <%= f.label :beginning_at %>
    <div class='input-group'>
      <div class='input-group-addon'><i class='fa fa-calendar'></i></div>
      <%= f.text_field :beginning_at, value: f.object.beginning_at.try(:strftime, '%d-%m-%Y %H:%M'), class: 'calendar form-control input-sm' %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :description %>
    <%= f.text_area :description, rows: 7, class: 'form-control input-sm' %>
  </div>

  <div class='form-group'>
    <%= f.label :poster %><br />

    <% if f.object.poster? %>
      <%= image_tag(f.object.poster.small.url) %><br />
      <div class='checkbox'>
        <label>
          <%= f.check_box :remove_poster %>
          Remove avatar
        </label>
      </div>
    <% else %>
    <% end %>

    <%= f.file_field :poster %><br />
    <%= f.hidden_field :poster_cache %>
  </div>

  <div class='form-group'>
    <%= link_to_remove_association t('.remove_event'), f, class: 'btn btn-danger btn-sm' %>
  </div>
</div>
